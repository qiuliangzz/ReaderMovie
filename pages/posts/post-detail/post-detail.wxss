.container {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
}

.head {
  position: relative;
}

.head-image {
  width: 100%;
  height: 460rpx;
}

.audio {
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  width: 102rpx;
  height: 110rpx;
  opacity: .6;
}

.author-data {
  /* 水平显示，垂直居中 */
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 30rpx;
  padding-top: 20rpx;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
}

.const-text {
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #999;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  padding-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
}

.circle-img image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  position: relative;
  top: 46rpx;
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  padding: 20rpx 30rpx 0 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}